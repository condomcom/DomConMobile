<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp">

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/floatingActionButton_pref"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/new_ac"
      android:outlineAmbientShadowColor="#FFFFFF"
      android:tint="#FFFFFF"
      app:fabSize="normal"
      android:layout_marginBottom="5dp"
      app:backgroundTint="@color/new_ac"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1"
      app:layout_constraintStart_toStartOf="@+id/constraintLayout_perf"
      app:layout_constraintTop_toTopOf="@+id/constraintLayout_perf"
      app:layout_constraintVertical_bias="1"
      android:layout_marginRight="50dp"
      app:rippleColor="#FFFFFF"
      app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_24"
      app:tint="@android:color/white" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout_perf"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginRight="10dp"
      android:layout_marginBottom="10dp"
      android:background="@drawable/dynamic_rv_speaker"
      android:elevation="3dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0">

    <androidx.cardview.widget.CardView
        android:id="@+id/view2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:backgroundTint="@color/text_light"
        android:foregroundGravity="center"
        android:innerRadius="0dp"
        android:scrollbarThumbHorizontal="@color/text_light"
        android:scrollbarThumbVertical="@color/text_light"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardBackgroundColor="@color/text_light"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".5">

      <ImageView
          android:id="@+id/image_perf"
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:layout_gravity="center"
          android:src="@drawable/mobile" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/new_favourites_perf"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/ic_favorite_inactive"
        android:backgroundTint="@color/accent_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mfb_animate_favorite="true"
        app:mfb_animate_unfavorite="true" />



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat"
        android:text="Начало в "
        android:textSize="14sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/text_beginner_perf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat"
        android:text="14:00"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/new_favourites_perf"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title_perf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat"
        android:maxLines="2"
        android:minLines="1"
        android:text="@string/backend"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/new_favourites_perf"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.312" />

    <TextView
        android:id="@+id/text_description_perf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat"
        android:justificationMode="inter_word"
        android:maxLines="5"
        android:minLines="1"
        android:text="@string/description"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/new_favourites_perf"
        app:layout_constraintStart_toEndOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/text_title_perf" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>