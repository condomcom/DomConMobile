<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConDom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent</item>
        <!--<item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_700</item>
        Secondary brand color. -->
        <!--<item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        Status bar color
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        Customize your theme here. -->
    </style>

    <style name="TextViewlight">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="StyleButton">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewCardAccent">
        <item name="android:textColor">@color/accent</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TextViewCardTitle">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewCardDescription">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="ButtonFavorite" parent="@android:style/Widget.Button">
        <item name="android:backgroundTint">@color/ripple_effect</item>
    </style>

    <style name="Theme.ConDom.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ConDom.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ConDom.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>